# Dockerfile.backend

FROM python:3.10-slim

# 設定工作目錄
WORKDIR /app

# 複製並安裝依賴
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 複製程式碼
COPY ./api ./api
COPY ./src ./src
COPY ./workflows ../workflows

# 開放 FastAPI 預設埠
EXPOSE 8000

# 啟動 uvicorn，監聽所有接口
CMD ["uvicorn", "api.app:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
